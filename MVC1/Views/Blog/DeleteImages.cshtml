@model ICollection<BlogMVC.Models.ImageViewModel>
@{
    ViewBag.Title = "DeleteImages";
}

<h2>DeleteImages</h2>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10 text-success">
        @ViewBag.DeletedImages
    </div>
</div>

@using (Html.BeginForm("DeleteImages", "Blog", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    int i = 0;
    foreach (var item in Model)
    {
        @Html.CheckBox(item.Name, false, new { id = item.Id, Name = "imageCheckBox", value = item.Id })
        <label for=@item.Id>  <img style="height: 200px; width: 200px;" src="/UploadedImages/@item.ImageFile" /></label>

        i++;
        if (i % 4 == 0)
        {
            <br />
        }
        else
        {
            @:&emsp;&emsp;
        }
    }
    <br />
    <input type="submit" value="Delete" class="btn btn-primary" />
}

<br />
<p>
    @Html.ActionLink("Back to List", "Index")
</p>